---
import "../styles/variables.css";
import "../styles/reset.css";
import "../styles/global.css";
import { getRelativeLocaleUrl } from "astro:i18n";
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;

function getRelativeCurrentLocaleUrl(path?: string): string {
  return getRelativeLocaleUrl(Astro.currentLocale!, path);
}

const navLinks = [
  { title: "Works", url: getRelativeCurrentLocaleUrl("works") },
  { title: "Posts", url: getRelativeCurrentLocaleUrl("posts") },
];

const socialLinks = [
  { icon: "mdi:github", url: "https://github.com/wasabi315" },
  { icon: "mdi:gitlab", url: "https://gitlab.com/wasabi315" },
  { icon: "mdi:twitter", url: "https://twitter.com/wasabi__315" },
  { icon: "mdi:instagram", url: "https://www.instagram.com/wasabi__315/" },
];

const pathName = Astro.url.pathname.replace(`/${Astro.currentLocale}/`, ``);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta property="og:site_name" content="wasabi315" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/og-image.png" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <slot name="head" />
    <title>{title} :: wasabi315</title>
    <script
      type="text/partytown"
      src="https://www.googletagmanager.com/gtag/js?id=G-BKFJQG08WT"></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-BKFJQG08WT");
    </script>
  </head>

  <body>
    <header>
      <Icon class="hamburger" name="mdi:hamburger-menu" size={24} />
      <div class="home">
        <a href={getRelativeCurrentLocaleUrl()}>wasabi315</a>
      </div>
      <nav class="nav-links">
        {navLinks.map(({ title, url }) => <a href={url}>{title}</a>)}
      </nav>
      <div class="lang-switcher">
        <a
          class:list={Astro.currentLocale === "en" ? ["current-locale"] : []}
          href={getRelativeLocaleUrl("en", pathName)}>EN</a
        ><a
          class:list={Astro.currentLocale === "ja" ? ["current-locale"] : []}
          href={getRelativeLocaleUrl("ja", pathName)}>JA</a
        >
      </div>
    </header>

    <aside class="sidebar">
      <nav class="nav-links">
        {navLinks.map(({ title, url }) => <a href={url}>{title}</a>)}
      </nav>
      <div class="lang-switcher">
        <a
          class:list={Astro.currentLocale === "en" ? ["current-locale"] : []}
          href={getRelativeLocaleUrl("en", pathName)}>EN</a
        ><a
          class:list={Astro.currentLocale === "ja" ? ["current-locale"] : []}
          href={getRelativeLocaleUrl("ja", pathName)}>JA</a
        >
      </div>
    </aside>

    <main>
      <slot />
    </main>

    <footer>
      Â© {new Date().getFullYear()} Satoshi Takimoto. All rights reserved.
    </footer>
  </body>
</html>

<script>
  document.querySelector(".hamburger")?.addEventListener("click", () => {
    document.querySelector(".sidebar")?.classList.toggle("expand");
  });
</script>

<style lang="scss">
  body {
    padding-inline: 1rem;
    display: grid;
    grid-template: auto 1fr auto / 1fr minmax(0, 80ch) 1fr;
    grid-template-areas:
      ". header ."
      ".  main  ."
      ". footer .";
    min-height: 100dvh;
  }

  header {
    grid-area: header;
    position: sticky;
    top: 0;
    z-index: 100;

    padding-block: 0.5rem;
    background-color: var(--bg1-transparent);
    height: 3.5rem;

    display: flex;
    align-items: center;
    gap: var(--spacing-xs);

    .hamburger {
      cursor: pointer;
    }
    .nav-links,
    .lang-switcher {
      display: none;
    }
  }

  .sidebar {
    display: none;
  }
  .sidebar.expand {
    position: fixed;
    inset: 3.5rem auto 0 0;
    width: 15rem;
    padding: 1rem;
    z-index: 100;

    background-color: var(--bg1-transparent);

    display: flex;
    flex-direction: column;
    justify-content: space-between;

    .nav-links a {
      display: block;
    }
  }

  header a,
  aside a {
    color: inherit;
    &:hover,
    &:focus {
      color: var(--accent);
    }
  }
  .nav-links,
  .home {
    font-size: 1.25rem;
    font-weight: bold;
  }
  .lang-switcher a.current-locale {
    font-weight: bold;
    text-decoration: underline;
    text-underline-offset: 0.2em;
  }
  .lang-switcher a:first-child::after {
    content: "|";
    display: inline-block;
    padding-inline: 0.25rem;
    font-weight: normal;
    text-decoration: none;
    color: var(--fg1);
  }

  main {
    grid-area: main;
    margin-top: var(--spacing-sm);
  }

  footer {
    grid-area: footer;
    padding-block: 2rem;
    font-size: 0.75rem;
    margin-top: var(--spacing-xl);
  }

  @media screen and (min-width: 768px) {
    header .hamburger {
      display: none;
    }

    header {
      padding-block: 0.75rem;
      gap: var(--spacing-xl);
      height: auto;

      .home {
        flex: 1;
      }
      .nav-links {
        display: flex;
        gap: var(--spacing-xs);
      }
      .lang-switcher {
        display: unset;
      }
    }

    main {
      margin-top: var(--spacing-xl);
    }
  }
</style>
