---
import type { CollectionEntry } from "astro:content";
import Layout from "./BaseLayout.astro";
import Work from "../components/Work.astro";

type Props = {
  title: string;
  works: CollectionEntry<"works">[];
};

const { title, works } = Astro.props;
---

<Layout title={title} description="List of works by wasabi315">
  <h1>{title}</h1>
  <ul>
    {
      works.map((work) => (
        <li>
          <Work work={work} />
        </li>
      ))
    }
  </ul>
</Layout>

<style lang="scss">
  h1 {
    font-size: 1.5rem;
    margin-bottom: 2rem;
  }

  ul {
    list-style: none;
    padding: 0;
  }

  li:not(:last-child) {
    margin-bottom: 2rem;
  }

  @media screen and (min-width: 768px) {
    h1 {
      font-size: 2rem;
    }
  }
</style>
