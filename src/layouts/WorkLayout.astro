---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import Layout from "./BaseLayout.astro";
import MarkdownRenderer from "../components/MarkdownRenderer.astro";
import Utterances from "../components/Utterances.astro";

type Props = {
  frontmatter: CollectionEntry<"works">["data"];
};

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title} description={frontmatter.description}>
  <Fragment slot="head">
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.15.2/dist/katex.min.css"
      integrity="sha384-MlJdn/WNKDGXveldHDdyRP1R4CTHr3FeuDNfhsLPYrq2t0UBkUdK2jyTnXPEK1NQ"
      crossorigin="anonymous"
    />
  </Fragment>
  <article>
    <header>
      <div>
        <h1>{frontmatter.title}</h1>
        <p>{frontmatter.description}</p>
      </div>
      <a
        href={`https://github.com/${frontmatter.githubRepository}`}
        target="_blank"
        rel="noopener noreferrer"
      >
        <Icon name="mdi:github" size={48} />
      </a>
    </header>
    <Image
      class="featuredImage"
      src={frontmatter.featuredImage}
      alt={frontmatter.title}
    />
    <MarkdownRenderer>
      <slot />
    </MarkdownRenderer>
    <footer>
      <Utterances />
    </footer>
  </article>
</Layout>

<style lang="scss">
  header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 2rem;
    h1 {
      font-size: 2rem;
    }
    p {
      color: var(--fg2);
      font-size: 0.875rem;
    }
    a {
      color: inherit;
      &:hover,
      &:focus {
        color: var(--accent);
      }
    }
  }

  .featuredImage {
    object-fit: contain;
    width: fit-content;
    height: fit-content;
    max-width: min(100%, 720px);
    margin: 0 auto 2rem;
  }

  footer {
    margin-top: 3.5rem;
  }
</style>
