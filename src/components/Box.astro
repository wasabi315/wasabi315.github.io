---

type Props = {
    headerText: string;
};

const { headerText } = Astro.props;
---

<div>
  <p>{headerText}</p>
  <slot />
</div>

<style lang="scss">
  div {
    background-color: var(--bg2);
    border-radius: 0.5rem;
    border-left: 0.5rem solid var(--accent);
    padding: 0.75rem 1.25rem;
    margin-bottom: 1rem;

    & > p {
      font-weight: bold;
    }
  }
</style>
